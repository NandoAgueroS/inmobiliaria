@model inmobiliaria.Models.Usuario
@{

    ViewData["Title"] = Model == null ? "Registrar Usuario" : "Editar Usuario";

}
<form asp-action="Guardar" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="Nombre"></label>
            <input class="form-control" asp-for="Nombre">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Apellido"></label>
            <input class="form-control" asp-for="Apellido">
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
            <div>
            <label asp-for="Clave"></label>
            <input class="form-control" asp-for="Clave">
            <span asp-validation-for="Clave" class="text-danger"></span>
        </div>
			<div class="form-group">
				<label asp-for="AvatarFile" class="control-label"></label>
				<input type="file" name="AvatarFile" />
				<span asp-validation-for="AvatarFile" class="text-danger"></span>
			</div>
            <div class="form-group">
				<label class="control-label">Rol</label>
				<select class="form-control" asp-for="Rol">
					@foreach (var kvp in (IDictionary<int, string>)ViewBag.Roles)
					{
						<option value="@kvp.Key">@kvp.Value</option>
					}
				</select>
			</div>

        <div>
            <input type="hidden" asp-for="Id" >
        </div>

        <button type="submit" class="btn btn-primary">Registrar</button>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


  
}



    