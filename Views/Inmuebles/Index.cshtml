@section Scripts{
    <script>
    function cargarDatos(item){

    const datos = fetch('/Inmuebles/BuscarPorId/' + item)
    .then(response => response.json())
    .then(data => {
        console.log(data);
        document.getElementById('propietario').innerHTML = "<b>Propietario</b>: <br>" + data.propietario.nombre + " " + data.propietario.apellido + " (" + data.propietario.dni + ")";
        document.getElementById('direccion').innerHTML = "<b>Direccion</b>: <br>" + data.direccion;
        document.getElementById('tipo').innerHTML = "<b>Tipo</b>: <br> " + data.tipo.descripcion;
        document.getElementById('uso').innerHTML = "<b>Uso</b>: <br>" + data.uso;
        document.getElementById('ambientes').innerHTML = "<b>Ambientes</b>: <br>" + data.ambientes;
        document.getElementById('coordenadas').innerHTML = "<b>Coordenadas</b>: <br>" + data.coordenadas;
        document.getElementById('precio').innerHTML = "<b>Precio</b>: <br>" + data.precio;
        $('#detalle').modal('show');
    })
    .catch(error => {
        console.error('Error:', error)
        toastr.error('No se pudieron cargar los detalles del inmueble');
        });
}


document.getElementById('guardar-tipo').addEventListener('click', () => {
    const descripcion = document.getElementById('descripcion').value;
    const tipo= { descripcion: descripcion};
    if (!descripcion || descripcion.trim() === "") {
        document.getElementById('ValidacionDescripcion').innerHTML = "El tipo es obligatorio";
    }else{
        document.getElementById('ValidacionDescripcion').innerHTML = "";
        fetch('/Inmuebles/AltaTipo', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(tipo)
        })
        .then(response => {
            if (response.ok) {
                toastr.success('Creado correctamente');
                $('#crearTipoModal').modal('hide');
            } else {
                toastr.error('Error al guaradar el tipo de inmueble');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            toastr.error('Error al guardar el tipo de inmueble');
        });
    }});
let filtroDisponibles = document.getElementById('filtro-disponibles');
const fechaDesde = document.getElementById('filtro-periodo-desde');
const fechaHasta = document.getElementById('filtro-periodo-hasta');
const selectFiltros = document.getElementById('select-filtros');
const filtroPeriodo = document.getElementById('filtro-periodo');
selectFiltros.addEventListener('change', (e) => {
      if(e.target.value == 3){
          filtroPeriodo.classList.remove('d-none');
      }else{
        filtroPeriodo.classList.add('d-none');
      }
    })
function filtrar(){
const option = selectFiltros.value;
let url = "/Inmuebles/Listar";
      switch(option){
        case "1":
          url = url + "?disponibles=true";
          break;
        case "2":
          url = url + "?disponibles=false";
          break;
        case "3":
          url = url + "?disponibles=true&fechaDesde="+fechaDesde.value + "&fechaHasta"+fechaHasta.value
          break;
      }
      fetch(url)
      .then(response => response.json())
      .then(data => {
          cargarInmuebles(data);
      })
      .catch(error => console.error(error))
    }
    filtrar();
function cargarInmuebles(inmuebles) {
    const inmueblesContainer = document.getElementById('inmuebles-container');
      inmueblesContainer.innerHTML = '';
    inmuebles.forEach(item => {
        inmueblesContainer.innerHTML += `
            <div class="card" style="width: 18rem;">
              <img src="/images/default1.png" class="card-img-top imagen-card" alt="Imagen Inmueble">
              <div class="card-body">
                <h6>@Html.DisplayNameFor(model => model.Direccion)</h6>
                <h4 class="card-title">${item.direccion}</h4>
                <p>@Html.DisplayNameFor(model => model.Uso)</p>
                <h5>${item.uso}</h5>
                <p>@Html.DisplayNameFor(model => model.Precio)</p>
                <h4>${item.precio}</h4>
          <div class="btn-group" role="group">
                    
            <a class="btn btn-warning" href=/Inmuebles/Formulario/${item.id}>Editar</a>
          @if(User.IsInRole("Administrador")){
            <a class="btn btn-danger" href=/Inmuebles/Eliminar/${item.id}>Eliminar</a>
          }
          </div>
<button type="button" class="btn btn-primary" onclick="cargarDatos(${item.id})">
  Detalle
</button>
          </div>
          
        `
      });}

    </script>
    }
